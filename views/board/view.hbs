{{#section 'css'}}
    <style>
        main h3 { margin-left: 30px; }
        #view { width: 600px; margin: 0 auto; }
        label { display: inline-block; width: 110px; text-align: right;
            font-weight: bold; }
        #contents { border: 1px solid #cccccc; display: inline-block;
            width: 460px; min-height: 350px; white-space: pre; }
        #view div label { padding-right: 10px; }
    </style>
{{/section}}

<main>
    <h3>게시판 본문글</h3>
    <div id="view">
        {{#bds}}
        <div><label>제목</label>
            <span>{{title}}</span></div>

        <div><label>작성자</label>
            <span>{{userid}}</span></div>

        <div><label>작성일</label>
            <span>{{regdate}}</span></div>

        <div><label class="dragup">본문</label>
            <span id="contents">{{contents}}</span></div>
        {{/bds}}
        <div><label></label>
            {{#if session.userid}}
                <button type="button" onclick="location.href='/board/write'">
                    새글쓰기</button>
            {{/if}}
            <button type="button" onclick="location.href='/board/list'">목록으로</button>

            {{#if session.userid}}
                <button type="button" id="updatebtn">수정하기</button>
                <button type="button" id="deletebtn">삭제하기</button>
            {{/if}}
        </div>
    </div>
</main>